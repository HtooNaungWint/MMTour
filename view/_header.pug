header.header
    nav.nav.nva--tours
        a.nav__el(href='/overview') All Tours

    //- auto create div element
    .header__logo
        img(src='/img/logo-long-text.png' alt='Tour Logo')
    nav.nav.nva--user 
      if user
        //-a.nav__el(onclick=`alertClose()`) X
        a.nav__el.nav__el--logout(href='#') Log Out
        a.nav__el(href='/user')
            if (user.picture)
              img.nav__user-img(src=`/img/users/${user.picture}` alt=`${user.name}`)
            else
              img.nav__user-img(src=`/img/users/default.jpg` alt=`${user.name}`)
            span=`${user.name.split(' ')[0]}`
            //img.nav__user-img(src=`/img/users/${user.picture}` alt=`${user.name}`)
      else
        a.nav__el(href='/login') Login
        a.nav__el.nav__el--cta(href='/login') Sign up
